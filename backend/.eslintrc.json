{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions" : [".js", ".jsx"]
            }
        ],
        "global-require": "off",
        "import/prefer-default-export": "off"
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ]
}